<div class="container">
  <div class="row">
    <div class="col-md-8 col-md-offset-2">
      <h1>Nouvelle réservation</h1>
      <%= simple_form_for [@band, @booking] do |f| %>
        <%= f.input :location, label: "Ville" %>
        <%= f.input :start_date, html5: true, label: "Date de début" %>
        <%= f.input :end_date, html5: true, label: "Date de fin" %>
        <%= f.input :price, label: "Prix" %>
        <%= f.button :submit, "Réserver", class: "btn btn-primary" %>
      <% end %>
    </div>
  </div>
</div>
