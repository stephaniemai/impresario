
<div class="container">
  <div class="row">
    <div class="col-md-6 col-md-offset-2">
      <h1>Create a new band</h1>
      <%= simple_form_for @band do |f| %>
        <%= f.input :name %>
        <%= f.input :city %>
        <%= f.input :conditions %>
        <%= f.input :price %>
        <%= f.association :genre, input_html: { class:'select2'} %>
        <%= f.button :submit, class: "btn-primary" %>
      <% end %>
      <p><%= link_to "Back to the artist list", bands_path %></p>
    </div>
  </div>
</div>

